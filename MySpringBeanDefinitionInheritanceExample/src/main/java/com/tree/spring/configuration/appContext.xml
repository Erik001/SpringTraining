<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="helloWorld" class="com.tree.spring.practice.HelloWorld"
		scope="singleton">
		<property name="message1" value="Hello World!!!" />
		<property name="message2" value="Hello World Again!!!" />
	</bean>
	<!-- <bean id="helloWorldMexico" class="com.tree.spring.practice.HelloWorldMexico" 
		parent="helloWorld"> -->
	<bean id="beanTemplate" abstract="true">
		<property name="message1" value="Whats Up World!!!" />
		<property name="message2" value="Hi World!!!" />
		<property name="message3" value="Alo World!!!" />
	</bean>
	<bean id="helloWorldMexico" class="com.tree.spring.practice.HelloWorldMexico"
		parent="beanTemplate">
		<property name="message1" value="Hello Mexico!!!" />
